    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Elements for the new 'slide-up' animation
            const animatedElements = document.querySelectorAll('.slide-up-hidden');

            // Elements for the existing 'fade-in-left' animation
            const footer = document.querySelector('.fade-in-left-hidden');
            
            // Set up the Intersection Observer options
            const options = {
                root: null, 
                rootMargin: '0px',
                threshold: 0.1 
            };

            // Create a new Intersection Observer
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // Logic for both animation types
                        if (entry.target.classList.contains('fade-in-left-hidden')) {
                             entry.target.classList.add('fade-in-left-visible');
                        } else if (entry.target.classList.contains('slide-up-hidden')) {
                            entry.target.classList.add('slide-up-visible');
                        }
                        
                        // Stop observing once the animation has been triggered
                        observer.unobserve(entry.target);
                    }
                });
            }, options);

            // 1. Start observing the footer element (Existing logic)
            observer.observe(footer);
            
            // 2. Start observing the alumni section elements (NEW logic)
            animatedElements.forEach(element => {
                observer.observe(element);
            });
        });
    </script>
